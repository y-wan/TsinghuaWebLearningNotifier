{
  "name": "网络学堂更新推送",
  "version": "0.3",
  "author": "Yingge Wan",
  "icons": {
    "24": "images/favicon.png",
    "48": "images/favicon.png"
  },
  "permissions": ["notifications", "tabs", "<all_urls>", "background"],
  "browser_action": {
    "default_icon": {
      "20": "images/favicon.png",
      "40": "images/favicon.png"
    },
    "default_title": "查看网络学堂状态",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/util.js", "js/background.js"],
    "persistent": true
  },
  "manifest_version": 2
}
